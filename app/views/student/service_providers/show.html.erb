<% title "Lsssp : Service Provider - #{@service_provider.name}" %>
<% content_for :sub_heading do %>
    <%= sub_heading('Service Provider ',"Certifications") %>
<% end %>
<h3>Certifications offered by <i><%= @service_provider.name %></i> </h3>

<table class="list" cellpadding="13" cellspacing="10px;">
  <% for certification in @provided_certifications %>
      <tr>
        <td class="logo">Logo</td>
        <td class="info">
          <strong>
            <%=link_to certification.name ,'#',:class=>'tipTipRight',:title=> examination_info(certification) %>
          </strong>   <br/>
          Price : A$ <%= certification.price %>
        </td>
        <td class="links">
          <% if current_user.owned.exists?(certification) %>
              <%=link_to 'Already Own','#',:class=>'tipTipRight',:title=>'Already Owned this certification' %>
          <% else %>
              <%=link_to content_tag(:span,'Buy'),student_service_providers_path(:id=>@service_provider,:cid=>certification.id),
                         :method=>:post ,:class=>'btn-blue tipTipRight',:title=>'Clicking on this will be redirect to Paypal Payment Gateway.',:style=>'float:right;' %>
          <% end %>
        </td>
      </tr>
  <% end %>
</table>




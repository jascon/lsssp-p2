<% title "Lsssp : Student - #{current_user.name}" %>
<% content_for :sub_heading do %>
    <%= sub_heading('Student','Registered Certifications') %>
<% end %>

<h3>Certifications you Registered </h3>

<% if @student_certifications.blank? %>
    <div class="error_msg">Sorry No Certifications Registered yet.!</div>
<% else %>

    <table class="list" cellpadding="13" cellspacing="10px;">
      <% for student_certification in @student_certifications %>
          <tr>
            <td class="logo">Logo</td>
            <td class="info">
              <strong>
                 <%=link_to student_certification.certification.name ,'#',:class=>'tipTipRight',:title=> examination_info(student_certification.certification) %>
              </strong>
            </td>
            <td class="links">
              <%= link_to_exam(student_certification.certification.id)  %>
            </td>
          </tr>
      <% end %>
    </table>
<% end %>



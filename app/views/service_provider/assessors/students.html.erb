<% title "LSSSP : Service Provider - #{current_user.name}" %>
<% content_for :sub_heading do %>
    <%= sub_heading('Service Provider ',"Students of #{@assessor.name}") %>
<% end %>
<%if @students.blank? %>
    <div class="error_msg">
      Sorry No Students Found for this Assessor..!
    </div>
<% else %>
    <%= form_tag(service_provider_assessor_path(@assessor),:method=>:delete) do %>
        <%= render :partial=>'student',:object=>@students %>
        <%= submit_tag 'Remove' %>  |
        Transfer Students from <%=@assessor.name%> to
        <%=select("user", "assessor_id", @assessors.collect {|p| [ p.name, p.id ] }, { :include_blank =>'--- Select a Assessor----' })%>
        <%= submit_tag 'Transfer' %>
    <% end %>
<% end %>

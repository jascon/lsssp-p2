<table class="tablesorter" id="main_table">
  <thead>
  <tr>
    <th><%= check_all %></th>
    <th>Name</th>
    <th>Email</th>
    <th>Registration Date</th>
    <th>Status</th>
  </tr>
  </thead>
  <tbody>
  <% for student in @students %>
      <tr class="<%=cycle('even', 'odd')%>">
        <td><%= check_box_tag "student_ids[]", student.id,false,{:id=>"data_#{student.id}"} %></td>
        <td><%=link_to student.name,user_info_path(:id=>student.id),:rel=>user_info_path(:id=>student.id),:class=>'ajax-cluetip'%></td>
        <td><%= student.email %></td>
        <td><%= student.created_at %></td>
        <td>
          <div id="approve_<%=student.id%>">
            <%= student.approved? ? image_tag('tick.gif') : image_tag('cros.gif') %>
          </div>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>


<% title "LSSSP : Service Provider - #{current_user.name}" %>
<% content_for :sub_heading do %>
    <%= sub_heading('Service Provider ','Certifications by LSSSP') %>
<% end %>
<% content_for :left_panel do  %>
    <td valign="top" width="279"> <%= render 'common/search' %>
    </td>
<% end %>
<div id="container">
  <%=link_to "Export",'#',:class=>'usuallink bold_text' %> |
  <%= link_to "PDF", '#' ,:class=>'usuallink bold_text' %>
</div>
<br/>
<div class="help_text">
 Area for managing Certifications. <br/>
 Service Provider Subscribe/Un-Subscribe the Certifications generated by the Admin.
</div>
<%if @certifications.blank? %>
    <div class="error_msg">
      Sorry No Active Certifications Found..!
    </div>
<% else %>
    <table class="tablesorter">
      <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% for certification in @certifications %>
          <tr class="<%=cycle('even','odd')%>">
            <td><%= highlight(certification.name,params[:search]) %></td>
            <td><%= certification.price %></td>
            <td>
              <% if current_user.provided_certifications.exists?(certification) %>
              <%= link_to 'Subscribed',service_provider_certifications_path,:class=>'usuallink bold_text' %>
              <% else %>
              <%= link_to "Subscribe", service_provider_certifications_path(:id =>certification.id), :method => :post,:class=>'usuallink bold_text' %>
               <% end %>
            </td>
            <td>
              <%= link_for_show( [:service_provider, certification]) %>
              <% if current_user.provided_certifications.exists?(certification) %>
              <%= link_for_destroy([:service_provider, certification]) %>
              <% end %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% end %>

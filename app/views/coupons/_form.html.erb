<div class="form-container">
  <p class="legend">
    <strong>Note:</strong>
    Required fields are marked with an asterisk (<em>*</em>)
  </p>
  <%= form_tag(:action=>'create') do %>
      <table>
        <tr>
          <td><label>Select Service Provider <em>*</em></label></td>
          <td><%= select_tag :user_id, options_from_collection_for_select(User.where(:role_id=>2), :id, :email) %></td>
        </tr>
        <tr>
          <td><label>Enter Number to Generate Coupons <em>*</em></label></td>
          <td><%= text_field_tag :length %></td>
        </tr>
        <tr>
          <td colspan="3" align="center"><%= submit_tag 'Generate Coupons', :disable_with=>'Please wait...' %></td>
        </tr>
      </table>
  <% end %>
</div>
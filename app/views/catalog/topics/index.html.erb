<% title "LSSSP : Topics" %>
<% content_for :sub_heading do %>
    <%= sub_heading('LSSSP | Catalog | Topics', 'Manage Topics') %>
<% end %>
<% content_for :left_panel do %>
    <td valign="top" width="250"> <%= render 'common/search' %>
      <%= render 'recent' %> </td>
<% end %>
<div class="help_text">
  Area for managing Topics. <br/>
  Along with creating, managing and removing Topics for your LSSSP Certifications.
</div>
<div>
  <%= link_to "Add New Topic", "#", :class=>'usuallink bold_text', :id=>'add_new' %> |
  <%= link_to "Export", export_catalog_topics_path, :class=>'usuallink bold_text' %>
</div>
<div id="new_form">
  <%= render 'form' %>
</div>
<% if @topics.blank? %>
    <div class="error_msg">
      Sorry No Topics Found..!
    </div>
<% else %>
    <table class="tablesorter">
      <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Status</th>
        <th>Sub Topics</th>
        <th>Certifications</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <%= render @topics %>
      </tbody>
    </table>
<% end %>

<% title "Catalog/Question" %>
<div class="formbox">
  <div class="desc"><b>Topic</b> : <%= @question.topic.name %> </div>
  <div class="divider"></div>
  <div class="desc"><b>Sub Topic Name</b> :  <%= @question.subtopic.name %></div>
  <div class="divider"></div>
  <div class="desc"><b>Question</b> :  <%= @question.content %></div>
  <div class="divider"></div>
  <div class="desc"><b>Status</b> :  <%= @question.active? ? 'Active' : 'Pending' %>
  </div>
</div>
<div class="link_buttons">
  <%= link_to_edit(edit_catalog_question_path(@question)) %>
  <%= link_to_delete([:catalog, @question]) %>
  <%= link_to_all(catalog_questions_path) %>
  <%= link_to_back %>
</div>

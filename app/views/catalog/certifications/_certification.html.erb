<%= content_tag_for(:tr,certification,:class=>cycle('even', 'odd')) do -%>
      <td><%= highlight(certification.name,params[:search])%></td>
      <td><%= certification.description %></td>
      <td><%= link_to_active(certification,active_catalog_certification_path(certification)) %></td>
      <td>
        <%= link_to "Show", [:catalog, certification],:class=>'usuallink bold_text' %>
        <%= link_to "Edit", edit_catalog_certification_path(certification),:class=>'usuallink bold_text' %>
        <%= link_to "Destroy", [:catalog, certification], :confirm => 'Are you sure?', :method => :delete,:class=>'usuallink bold_text' %>       
     </td>
<% end %>


<div class="form-container">
  <p class="legend">
    <strong>Note:</strong>
    Required fields are marked with an asterisk (<em>*</em>)
  </p>
  <%= form_for [:catalog, @certification] do |f| %>
      <%= f.error_messages %>
      <table>
        <tr>
          <td><label>Name <em>*</em></label></td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td><label>Price <em>*</em></label></td>
          <td><%= f.text_field :price %></td>
        </tr>
        <tr>
          <td><label>Active?</label></td>
          <td><%= f.check_box :active %></td>
        </tr>
        <tr id="topics">
          <td><label>Topic <em>*</em></label></td>
          <td><%= collection_select(:certification, :topic_id, Topic.active, :id, :name, :prompt => true) %>
           <span id="ajax-loading"><%= image_tag('/images/icons/ajax-loader.gif') %></span>
          </td>
        </tr>
        <% if @certification.topic_id.nil? %>
            <tr><td colspan="3" id="subtopics"></td></tr>
        <% else %>
            <tr><td colspan="3" id="subtopics"><%= render 'load_subtopics' %></td></tr>
        <% end %>


        <tr>
          <td><label>Number of Questions <em>*</em></label></td>
          <td><%= f.text_field :no_of_questions %></td>
        </tr>
        <tr>
          <td><label>Duration <em>*</em></label></td>
          <td><%= f.text_field :duration %></td>
        </tr>
        <tr>
          <td><label>Positive marks <em>*</em></label></td>
          <td><%= f.text_field :positive_marks %></td>
        </tr>
        <tr>
          <td><label>Negative marks <em>*</em></label></td>
          <td><%= f.text_field :negative_marks %></td>
        </tr>
        <tr>
          <td><label>Unattempted Marks <em>*</em></label></td>
          <td><%= f.text_field :unattempted_marks %></td>
        </tr>
        <tr>
          <td><label>Pass marks percentage <em>*</em></label></td>
          <td><%= f.text_field :pass_marks_percentage %></td>
        </tr>
        <tr>
          <td><label>Description</label></td>
          <td><%= f.text_field :description %></td>
        </tr>
        <tr>
          <td colspan="3" align="center"> <%= f.submit 'Submit',:disable_with=>'Please wait...' %></td>
        </tr>
      </table>
  <% end %>
</div>


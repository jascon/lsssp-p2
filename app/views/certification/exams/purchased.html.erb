<% title "Lsssp : Manage Certifications" %>
<% content_for :sub_heading do %>
    <%= sub_heading('LSSSP Manage Certifications','Purchased' ) %>
<% end %>
<% if @student_certifications.blank? %>
    <div class="error_msg">There are no Purchased Certifications! </div>
<% else %>
    <div class="inline">
      <div class="inline_left">
        <i>Filter By Certification:</i>
        <%= select_tag(:purchased_certification_id, options_from_collection_for_select(Certification.active, "id", "name",{:selected=>params[:certification_id]}),{:include_blank => true}) %>
      </div>
      <div class="inline_right"></div>
    </div>
    <table class="tablesorter">
      <thead>
      <tr>
        <th>Certification</th>
        <th>Purchased By</th>
        <th>Purchased from</th>
        <th>Amount</th>
        <th>Purchased Time</th>
      </tr>
      </thead>
      <tbody>
      <% for student_certification in @student_certifications %>
          <tr class="<%=cycle('even', 'odd')%>">
            <td><%= student_certification.certification.name %></td>
            <td><%=link_to student_certification.user.email,user_info_path(:id=>student_certification.user.id),:rel=>user_info_path(:id=>student_certification.user.id),:class=>'ajax-cluetip'%></td>
            <% provider = User.find(student_certification.certificate_provider_id) %>
            <td><%=link_to provider.email ,user_info_path(:id=>provider.id),:rel=>user_info_path(:id=>provider.id),:class=>'ajax-cluetip'%></td>
            <td><%= student_certification.amount %></td>
            <td><%= date_time_stamp(student_certification.created_at) %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <div class="lsssp_pagination">
      <%= page_entries_info @student_certifications %>  <%= will_paginate @student_certifications, :container => false %>
    </div>
<% end %>
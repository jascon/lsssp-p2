<div class="search" style="">
    <div class="margin">
        <h3>Search:</h3>
        <%= hidden_field_tag :direction, params[:direction] %>
        <%= hidden_field_tag :sort, params[:sort] %>
        <div class="searchbox">
            <%= form_tag(controller_name, :method => 'get') do %>
            <%= text_field_tag :search, params[:search],:size=>15, :class => "formTextBox",:size=>30 %>
            <%= submit_tag 'Go', :disable_with=>'...'%>
            <%#= button_for("Go", :button_type => "submit",:class=>'btn-red') %>
            <% end %>
        </div>
    </div>
</div>

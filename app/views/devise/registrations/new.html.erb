<div id="login_page">
  <h3>Enter Details for Registration</h3>
  <% @enroll = rand(1000000000-9999999999) %>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),:validate=>true) do |f| %>

      <p><%= f.label :name, "First Name" %><br/>
        <%= f.text_field :name %></p>

      <p><%= f.label :last_name %><br/>
        <%= f.text_field :last_name %></p>

      <p><%= f.label :email %><br/>
        <%= f.email_field :email %></p>


      <p><%= f.label :primary_number, "Primary Contact Number  (Mobile / Telephone. ex: 04412345678)" %><br/>
        <%= f.text_field :primary_number %></p>

      <p><%= f.label :secondary_number, "Secondary Contact Number  (Mobile / Telephone. ex: 04412345678)" %><br/>
        <%= f.text_field :secondary_number %></p>

      <%= f.hidden_field :password, :value=>@enroll %>
      <%= f.hidden_field :password_confirmation, :value=>@enroll %>
      <%= f.hidden_field :role_id, :value=>4 %>
      <%= f.hidden_field :enrollment_no, :value=>@enroll %>
      <%= f.hidden_field :approved, :value=>1 %>


      <p><%= f.submit "Sign up" %></p>
  <% end %>

  <%= render :partial => "devise/shared/links" %>
</div>


